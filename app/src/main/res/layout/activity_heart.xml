<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeartActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content">

    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <ImageView


        android:id="@+id/doctor_photo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/heart" />

    <TextView
        android:id="@+id/doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="HEART INFORMATION"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/doctor_specialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textStyle="italic"
        android:text="Cardiology"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/doctor_bio"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="The heart is divided into four chambers:\n

\n1.Right atrium: The right atrium receives blood from the body that is low in oxygen.
\n2.Right ventricle: The right ventricle pumps blood from the right atrium to the lungs.
\n3.Left atrium: The left atrium receives blood from the lungs that is high in oxygen.
\n4.Left ventricle: The left ventricle pumps blood from the left atrium to the body.\n\nThe heart works by contracting and relaxing. When the heart contracts, it pumps blood out of the chambers. When the heart relaxes, it fills up with blood. The heart beats about 100,000 times per day and pumps about 2,000 gallons (7,571 liters) of blood."
        android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card1_style"
            android:text="click here to know \n best hospital near by you"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/baseline_location_on_24"/>


    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>