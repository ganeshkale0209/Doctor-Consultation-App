<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeethActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content">

    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <ImageView


        android:id="@+id/doctor_photo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/teeth" />

    <TextView
        android:id="@+id/doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Teeth Information"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp" />

        <TextView
            android:id="@+id/doctor_specialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Dentists"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="italic" />

    <TextView
        android:id="@+id/doctor_bio"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Teeth are hard, mineralized structures in the jaws of humans and other vertebrates. They are used to chew food, break down food into smaller pieces, and help with speech. Humans have two sets of teeth: primary teeth (also known as baby teeth or milk teeth) and permanent teeth.\n\nTeeth are made up of four main parts:

\n\n1.Enamel: The enamel is the hard, white outer layer of the tooth. It is the hardest substance in the human body.
\n2.Dentin: The dentin is the layer of tissue under the enamel. It is similar to bone but harder.
\n3.Pulp: The pulp is the soft inner core of the tooth. It contains blood vessels, nerves, and connective tissue.
\n4.Cementum: The cementum is a thin layer of tissue that covers the root of the tooth. It helps to attach the tooth to the jawbone."
        android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card1_style"
            android:text="click here to know \n best hospital near by you"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/baseline_location_on_24"/>


    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>